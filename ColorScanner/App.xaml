             xmlns:unity="clr-namespace:Prism.Unity;assembly=Prism.Unity.Forms"
             x:Class="ColorScanner.App">

    <Application.Resources>
        <!-- Colors -->

        <Color x:Key="bg_i1">#CF135D</Color>
        <Color x:Key="bg_i2">#FFFFFF</Color>
